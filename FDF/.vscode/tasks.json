{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 활성 파일 빌드",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
				"-Lmlx_mms",
				"-lmlx",
				"-framework",
				"OpenGL",
				"-framework",
				"AppKit",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
				"|",
				"install_name_tool",
				"-change",
				"libmlx.dylib",
				"./mlx_mms/libmlx.dylib",
				"test",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "디버거에서 생성된 작업입니다."
        }
    ],
    "version": "2.0.0"
}